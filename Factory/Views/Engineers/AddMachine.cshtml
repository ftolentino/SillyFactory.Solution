@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="container">
  <h4 class="text-center my-4">Add a machine to this engineer: @Html.DisplayFor(model => model.Name)</h4>
  <div class="d-flex flex-row justify-content-center m-2">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.EngineerId)

        @Html.Label("Select machine", null, new { @class ="mx-1"})
        @Html.DropDownList("MachineId", null, new { @class ="mx-1"})

        <input type="submit" value="Save" class="btn btn-primary mx-2" />
    }
  </div>
  <div class="d-flex flex-row justify-content-center mt-4">
    <p>@Html.ActionLink("Back to engineers list", "Index")</p>
  </div>
</div>