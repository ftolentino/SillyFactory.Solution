@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="container my-4">
  <h1 class="text-center my-4">Engineers</h1>
  <hr />
  <div class="d-flex flex-column align-items-center">
    @if (@Model.Count == 0)
    {
      <h3>No engineers have been added yet!</h3>
    } 

    <ol>
      @foreach(Engineer engineer in Model)
      {
        <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
      }
    </ol>
  </div>
  <div class="d-flex flex-row justify-content-center">
    <p class="text-center">@Html.ActionLink("Add new engineer", "Create")</p>
  </div>
  <hr />
</div>