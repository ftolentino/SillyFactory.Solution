@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="container">
  <h2 class="text-center my-4">Are you sure you want to delete this Machine?</h2>

  <div class="d-flex flex-column align-items-center">
    <p><strong>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</strong></p>
    @using (Html.BeginForm())
    {
        <input type="submit" value="Delete" class="btn btn-danger my-2" />
    }
  </div>
  <div class="d-flex flex-row justify-content-center my-4">
    <p>@Html.ActionLink("Back to machine list", "Index")</p>
  </div>
</div>
