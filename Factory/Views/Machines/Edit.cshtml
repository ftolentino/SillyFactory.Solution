@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="container">
  <h2>Edit</h2>

  <h4>Edit this machine: @Html.DisplayFor(model => model.Description)</h4>

  @using (Html.BeginForm())
  {
      @Html.HiddenFor(model => model.MachineId)

      @Html.LabelFor(model => model.Description)
      @Html.EditorFor(model => model.Description)

      @Html.Label("Select engineer")
      @Html.DropDownList("EngineerId")

      <input type="submit" value="Save" />
  }

  <p>@Html.ActionLink("Back to machines list", "Index")</p>
</div>
